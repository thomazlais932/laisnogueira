def calcular_soma_e_media(lista):
    # Calcula a soma
    soma = sum(lista)
    
    # Calcula a média
    media = soma / len(lista)
    
    return soma, media

numeros = [5, 12, 18, 25, 30, 42, 50]
soma, media = calcular_soma_e_media(numeros)
print("Soma:", soma)182
print("Média:", media)26

