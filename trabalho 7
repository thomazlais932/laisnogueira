def substituir_palavra(lista, palavra_procurada, nova_palavra):
    # Percorre a lista de palavras
    for i in range(len(lista)):
        # Se a palavra na lista for igual à palavra procurada, substitui pela nova palavra
        if lista[i] == palavra_procurada:
            lista[i] = nova_palavra
    
    return lista

# Exemplo de uso
lista_palavras = ["banana", "morango", "limão"]
palavra_procurada = "banana"
nova_palavra = "python"

lista_alterada = substituir_palavra(lista_palavras, palavra_procurada, nova_palavra)
print(lista_alterada)

